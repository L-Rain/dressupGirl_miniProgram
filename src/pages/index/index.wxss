.index_page {
  width: 100%;
  height: 100%;
  position: relative;
  background: #ffdff2;
  text-align: center;
  font-size: 0;
}
.page_bg {
  width: 100%;
  height: 100%;
}
.main_layout {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-75%);
  width: 100%;
  border-box:box-sizing;
}
.main_layout .main_bg {
  width: 75%;
}

/* 底部 */
.index_bottom {
  position: absolute;
  bottom: 2rem;
  left: 0;
  width: 100%;
}
.bottom_layout {
  position:relative;
  width:520rpx;
  height: 145rpx;
  background:#fff;
  margin:0 auto;
  padding: 80rpx 10rpx 20rpx 10rpx;
  border:6rpx solid #ffcee2;
  border-radius:40rpx;
}
.start_btn {
  position: absolute;
  top: 0;
  left: 50%;
  width: 8.5rem;
  height: 3.5rem;
  transform: translate(-50%, -60%);
  animation : breath linear 1.5s infinite;
}
.bottom_bg {
  display: block;
  width: 100%;
}
.bottom_btns {
  display: flex;
  justify-content: space-between;
  align-items:center;
}
.bottom_btns .right_btn,.left_btn {
  /* width: 80rpx; */
  margin: 0 70rpx;
  text-align: center;
}
.left_btn {
  background: none;
  padding: 0;
  line-height: initial;
  font-size: 0;
  border-radius: 0;
}
.left_btn::after{
  border: 0;
}
.bottom_btns image {
  width: 100rpx;
  display: block;
  margin: 0 auto 10rpx;
}
.bottom_btns text {
  font-size: 26rpx;
  font-weight: 500;
  color: #4d4d4d;
}
.login_test {
  position: absolute;
  top: 0;
  left: 0;
  width: 4rem;
  height: 2rem;
  background: #fff;
}


@keyframes breath {
  0% {
    transform: translate(-50%, -60%) scale(1);
  }
  50% {
    transform: translate(-50%, -60%) scale(0.9);
  }
  100% {
    transform: translate(-50%, -60%) scale(1);
  }
