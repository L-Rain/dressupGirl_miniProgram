page {
  height: initial;
  overflow-y: auto;
  background: #f0f2f5;
}
.dress_page {
  width: 100%;
  /* height: 100%;  */
  /* overflow-y: auto; */
  position: relative;
  // background: #f1f1f1;
  text-align: center;
  font-szie: 0;
}
.top_bar {
  position: relative;
  width: 100%;
}
.bar_bg {
  display: block;
  width: 100%;
}
.bar_text {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100%;
  height: 100%;
  transform: translate(-50%,-52%);
  display: flex;
  align-items:center;
  justify-content: center;
}
.bar_text image,text {
  display: inline-block;
  vertical-align: middle;
}
.bar_text image {
  width: 35rpx;
}
.bar_text text{
  font-size: 40rpx;
  color: #fff;
  margin: 0 20rpx;
}
.main_content {
  padding: 40rpx 2%;
  box-sizing: border-box;
  display: flex;
  justify-content : space-between;
  flex-wrap:wrap;
}
.main_content .list_layout {
  border-radius: 15rpx;
  // border: 1px solid #eaeaea;
  width: 46%;
  box-sizing: border-box;
  margin: 10rpx 2%;
  font-size: 0;
  text-align: center;
  background: #fff;
  box-shadow: 0 5rpx 30rpx rgba(0,0,0,0.05);
  .img_layout {
    width: 100%;
    height: 480rpx;
    position: relative;
    overflow: hidden;
    border-top-left-radius:15rpx;
    border-top-right-radius:15rpx;
  }
  .text_zone {
    display: flex;
    justify-content : space-between;
    font-size: 26rpx;
    height: 80rpx;
    padding: 0 20rpx;
    line-height: 80rpx;
    color: #4d4d4d;
  }
  .prize {
    font-size: 0;
    text,image {
      display: inline-block;
      vertical-align: middle;
    }
    text {
      font-size: 26rpx;
      color: #f3aac9;
    }
    image {
      width: 40rpx;
      height: 40rpx;
      margin-right: 10rpx;
    }
  }
}
.main_content .item_image{
  position: absolute;
  width: 110%;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  height: inherit;
}
.main_content navigator{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}