page {
  height: initial;
  overflow-y: auto;
  background: #f0f2f5;
}
.dress_page {
  width: 100%;
  /* height: 100%;  */
  /* overflow-y: auto; */
  position: relative;
  // background: #f1f1f1;
  text-align: center;
  font-szie: 0;
}
.top_tag_layout {
  position: relative;
  .is_new {
    position: absolute;
    text-align: center;
    top: 0;
    right: 0;
    width: 30rpx;
    color: #fff;
    font-size: 14rpx;
    font-weight: 200;
    height: 25rpx;
    line-height: 25rpx;
    border-bottom-left-radius: 10rpx;
    background: #f084b6;
  }
}
.top_bar{
  padding: 25rpx 0 25rpx 30rpx;
  background: #f3a2c7;
  scroll-view {
    width: 100%;
    // height: 100%;
    font-size: 0;
    white-space:nowrap;
    overflow: hidden;
  }
  .top_tag_layout {
    display: inline-block;
    vertical-align: middle;
    margin-right: 30rpx;
    border-radius: 15rpx;
    overflow: hidden;
  }
  .top_tag {
    width: 155rpx;
    height: 58rpx;
    line-height: 58rpx;
    background: #f3a3c7;
    text-align: center;
    border: 4rpx solid #fff;
    border-radius: 15rpx;
    color: #fff;
    transition: opacity ease-out 0.3s;
    opacity: 0.5;
    image, text{
      display: inline-block;
      vertical-align: middle;
    }
    image {
      width: 40rpx;
      height: 40rpx;
      margin: 0 10rpx 0 -3rpx;
    }
    text {
      font-size: 28rpx;
      font-weight: 300;
    }
  }
  .tag_active {
    .top_tag {
      background: #fff;
      color: #4e4e4e;
      opacity: 1;
    }
  }
}

.main_content {
  padding: 2%;
  box-sizing: border-box;
  display: flex;
  justify-content : space-between;
  flex-wrap:wrap;
}
.main_content .list_layout {
  border-radius: 15rpx;
  // border: 1px solid #eaeaea;
  width: 100%;
  box-sizing: border-box;
  margin: 2%;
  font-size: 0;
  text-align: center;
  background: #fff;
  box-shadow: 0 5rpx 30rpx rgba(0,0,0,0.05);
  .img_layout {
    width: 100%;
    height: 385rpx;
    position: relative;
    overflow: hidden;
    border-top-left-radius:15rpx;
    border-top-right-radius:15rpx;
    image {
      width: 100%;
      height: 100%;
    }
  }
  .text_zone {
    display: flex;
    justify-content : space-between;
    align-items: center;
    font-size: 28rpx;
    font-weight: 500;
    height: 100rpx;
    padding: 0 20rpx;
    line-height: 100rpx;
    color: #4d4d4d;
  }
  .prize {
    width: 170rpx;
    height: 65rpx;
    line-height: 65rpx;
    border-radius: 65rpx;
    background: #f3a2c7;
    font-size: 0;
    text,image {
      display: inline-block;
      vertical-align: middle;
    }
    text {
      font-size: 26rpx;
      color: #fff;
      font-weight: normal;
    }
    image {
      width: 40rpx;
      height: 40rpx;
      margin-right: 10rpx;
    }
  }
  .normal_btn {
    background: #fff;
    box-sizing: border-box;
    line-height: 58rpx;
    color: #f3a2c7;
    border: 4rpx solid #f3a2c7;
    font-size: 26rpx;
  }
}
