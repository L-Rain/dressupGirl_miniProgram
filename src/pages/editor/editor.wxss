.edit_page {
  width: 100%;
  height: 100%;
  background: #fbe2ec;
  position: relative;
}
.full_canvas {
  position: absolute;
  z-index: -1;
  opacity: 0;
  width: 100%;
  height: 100%;
}
.icon_canvas {
  position: absolute;
  width: 200%;
  height: 200%;
  z-index: -1;
  opacity: 0;
}
image {
