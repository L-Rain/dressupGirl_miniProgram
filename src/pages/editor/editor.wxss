/* 模特展示区 */
.main_layout {
  width: 100%;
  position: absolute;
  z-index: 3;
  top: 0;
  bottom: 450rpx;
  left: 0;
  transition: bottom ease-out 0.2s;
}
.btn_layout {
  width:100%;
  box-sizing: border-box;
  padding: 0 20rpx;
  position: absolute;
  z-index: 3;
}
.top_btns{
  top: 20rpx;
  left: 0;
}
.bottom_btns {
  bottom: 0;
  left: 0;
}
.bottom_left_btn {
  /* transition:transform ease-out 0.3s; */
  transform:rotateZ(0);
}
.btn_up {
  transform:rotateZ(180deg);
}
.model_layout {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 700rpx;
  height: 700rpx;
  /* background: #000; */
}
.model_layout image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
}

